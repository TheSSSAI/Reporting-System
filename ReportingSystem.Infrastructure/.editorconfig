# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.cs]
indent_size = 4
indent_style = space
dotnet_sort_system_directives_first = true
csharp_preserve_single_line_blocks = true
csharp_preserve_single_line_statements = true

# Code style settings
# See https://docs.microsoft.com/en-us/visualstudio/ide/editorconfig-code-style-settings-reference
# for more details

# C# Formatting Rules
csharp_style_allow_embedded_statements_on_same_line_as_closing_brace = false
csharp_style_braces_for_embedded_statements = true
csharp_style_separate_using_directives = true
csharp_style_using_declarations = true
csharp_style_allow_blank_lines_between_consecutive_braces = false
csharp_style_allow_blank_line_after_colon_in_constructor_initializer = true
csharp_style_allow_blank_line_after_token_in_conditional_expression = true
csharp_style_allow_blank_line_after_token_in_arrow_expression = true
csharp_style_wrap_binary_expressions = ignore
csharp_style_wrap_initializer_expressions = ignore
csharp_style_wrap_method_call_chains = ignore
csharp_style_wrap_method_parameters = ignore
csharp_style_wrap_object_creation_expressions = ignore
csharp_style_wrap_type_parameters = ignore

# Naming conventions
dotnet_naming_rule.public_members_must_be_pascal_case.severity = suggestion
dotnet_naming_rule.public_members_must_be_pascal_case.symbols = public_members
dotnet_naming_rule.public_members_must_be_pascal_case.style = pascal_case_style

dotnet_naming_symbols.public_members.applicable_kinds = property, method, field, event, enum, struct, class, interface, delegate
dotnet_naming_symbols.public_members.applicable_accessibilities = public, internal, protected, protected_internal
dotnet_naming_symbols.public_members.required_modifiers = 

dotnet_naming_style.pascal_case_style.capitalization = pascal_case

# Use 'this.' for instance fields and properties
dotnet_style_qualification_for_field = true:suggestion
dotnet_style_qualification_for_property = true:suggestion
dotnet_style_qualification_for_method = true:suggestion
dotnet_style_qualification_for_event = true:suggestion

# Language conventions
dotnet_style_predefined_type_for_locals_parameters_members = true:suggestion
dotnet_style_predefined_type_for_member_access = true:suggestion
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:suggestion
dotnet_style_prefer_conditional_expression_over_assignment = true:suggestion
dotnet_style_prefer_conditional_expression_over_return = true:suggestion
dotnet_style_prefer_inferred_anonymous_type_member_names = true:suggestion
dotnet_style_prefer_inferred_tuple_element_names = true:suggestion
dotnet_style_prefer_null_coalescing_expression_over_conditional_expression_when_referencing_a_null_check = true:suggestion
dotnet_style_prefer_simplified_boolean_expressions = true:suggestion
dotnet_style_prefer_simplified_interpolation = true:suggestion
dotnet_style_prefer_switch_expression = true:suggestion
dotnet_style_prefer_using_directive_placement = outside_namespace:suggestion

# Unnecessary code
dotnet_code_quality_unused_parameters = all:suggestion
dotnet_remove_unnecessary_suppression_exclusions = 

# Code style
csharp_style_var_for_built_in_types = true:suggestion
csharp_style_var_when_type_is_apparent = true:suggestion
csharp_style_var_elsewhere = true:suggestion
csharp_prefer_simple_default_expression = true:suggestion

# New line settings
csharp_new_line_before_open_brace = all
csharp_new_line_before_else = true
csharp_new_line_before_catch = true
csharp_new_line_before_finally = true
csharp_new_line_before_members_in_object_initializers = true
csharp_new_line_before_members_in_anonymous_types = true
csharp_new_line_between_query_expression_clauses = true

# Expression-level preferences
dotnet_style_object_initializer = true:suggestion
dotnet_style_collection_initializer = true:suggestion
dotnet_style_coalesce_expression = true:suggestion
dotnet_style_null_propagation = true:suggestion
dotnet_style_prefer_auto_properties = true:suggestion
dotnet_style_prefer_is_null_check_over_reference_equality_method = true:suggestion
csharp_prefer_throw_expression = true:suggestion
csharp_style_expression_bodied_constructors = false
csharp_style_expression_bodied_methods = false
csharp_style_expression_bodied_operators = false
csharp_style_expression_bodied_properties = false
csharp_style_expression_bodied_indexers = false
csharp_style_expression_bodied_accessors = false
csharp_style_expression_bodied_lambdas = true
csharp_style_expression_bodied_local_functions = false