{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "ReportingSystem"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=reporting_system_db;Username=postgres;Password=password",
    "Redis": "localhost:6379"
  },
  "JintEngine": {
    "MaxStatements": 10000,
    "MemoryLimitMb": 128,
    "TimeoutSeconds": 10
  },
  "DataProtection": {
    // For development, keys can be persisted to the file system.
    // In production, this should be configured to use a persistent, secure store
    // like Azure Blob Storage, Redis, or a database.
    "PersistKeysToDirectoryPath": "./.dp-keys"
  }
}