<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!--
      Clear all inherited package sources. This ensures that the build is not
      dependent on any machine-specific or user-level NuGet configurations.
      All package sources for this solution must be explicitly defined here.
    -->
    <clear />

    <!--
      Define the official nuget.org package source. This is the primary source
      for all third-party dependencies.
    -->
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>

  <config>
    <!-- 
      Set the default repository path. This is optional but can help in some CI environments.
      <add key="repositoryPath" value="../packages" />
    -->
  </config>
  
</configuration>